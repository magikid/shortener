<div class="row">
  <div class="col-md-2">
    <strong>Short code</strong>
  </div>
  <div class="col-md-2">
    <%= @site.short_code %>
  </div>
</div>

<div class="row">
  <div class="col-md-2">
    <strong>URL</strong>
  </div>
  <div class="col-md-2">
    <%= link_to @site.url, @site.url %>
  </div>
</div>

<div class="row">
  <div class="col-md-2">
    <strong>Hits</strong>
  </div>
  <div class="col-md-2">
    <%= @site.hits %>
  </div>
</div>

<div class="row">
  <div class="col-md-2">
    <%= link_to 'Edit', edit_site_path(@site) %> |
    <%= link_to 'Back', sites_path %>
  </div>
</div>

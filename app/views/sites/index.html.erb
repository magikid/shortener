<h1>Sites</h1>

<table class="table">
  <thead>
    <tr>
      <th>Short code</th>
      <th>URL</th>
      <th>Hits</th>
      <th>Created by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.short_code %></td>
        <td><%= site.url %></td>
        <td><%= site.hits %></td>
        <td><%= site.user.name %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Site', new_site_path %>
